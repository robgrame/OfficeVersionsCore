@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
    ViewData["Description"] = "Our Privacy Policy outlines how we collect, use, and protect your personal information in compliance with GDPR and US privacy regulations.";
    var currentDate = DateTime.Now.ToString("MMMM dd, yyyy");
}

<div class="container">
    <!-- Privacy Policy Header -->
    <div class="privacy-header">
        <div class="privacy-header-icon">
            <i class="bi bi-shield-lock"></i>
        </div>
        <h1>@ViewData["Title"]</h1>
        <p>We are committed to protecting your privacy and personal data</p>
        <div class="privacy-last-updated">Last Updated: @currentDate</div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Table of Contents -->
            <div class="privacy-toc">
                <div class="privacy-toc-title">
                    <i class="bi bi-list-ul"></i>
                    <span>Quick Navigation</span>
                </div>
                <ul>
                    <li><a href="#introduction"><i class="bi bi-arrow-right-short"></i> Introduction</a></li>
                    <li><a href="#data-collection"><i class="bi bi-arrow-right-short"></i> Data We Collect</a></li>
                    <li><a href="#data-usage"><i class="bi bi-arrow-right-short"></i> How We Use Your Data</a></li>
                    <li><a href="#data-storage"><i class="bi bi-arrow-right-short"></i> Data Storage and Security</a></li>
                    <li><a href="#data-retention"><i class="bi bi-arrow-right-short"></i> Data Retention</a></li>
                    <li><a href="#legal-rights"><i class="bi bi-arrow-right-short"></i> Your Legal Rights</a></li>
                    <li><a href="#gdpr-rights"><i class="bi bi-arrow-right-short"></i> GDPR Specific Rights</a></li>
                    <li><a href="#ccpa-rights"><i class="bi bi-arrow-right-short"></i> CCPA Rights</a></li>
                    <li><a href="#cookies"><i class="bi bi-arrow-right-short"></i> Cookies</a></li>
                    <li><a href="#changes"><i class="bi bi-arrow-right-short"></i> Changes to This Policy</a></li>
                    <li><a href="#contact"><i class="bi bi-arrow-right-short"></i> Contact Us</a></li>
                </ul>
            </div>
            
            <!-- Main Privacy Content -->
            <div class="privacy-container">
                <!-- Introduction -->
                <div class="privacy-section" id="introduction">
                    <h2><i class="bi bi-info-circle me-2"></i>Introduction</h2>
                    <p>
                        At Office Versions, we respect your privacy and are committed to protecting your personal data. 
                        This privacy policy will inform you about how we look after your personal data when you visit our website
                        and tell you about your privacy rights and how the law protects you.
                    </p>
                </div>

                <!-- Data Collection -->
                <div class="privacy-section" id="data-collection">
                    <h2><i class="bi bi-database me-2"></i>Data We Collect</h2>
                    <p>
                        We collect only technical data necessary to provide and improve our services. We do <strong>NOT</strong> collect any personal identification information.
                    </p>
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>What We Do NOT Collect:</strong> We do not collect your name, surname, username, email address, phone number, or IP address.
                    </div>
                    <p><strong>Technical Data We Collect:</strong></p>
                    <ul>
                        <li><strong>Browser Information</strong> - Browser type, version, and language preferences.</li>
                        <li><strong>Device Information</strong> - Operating system, device type, and screen resolution.</li>
                        <li><strong>Usage Patterns</strong> - Pages visited, time spent on pages, and navigation flow through our website.</li>
                        <li><strong>Performance Data</strong> - Load times, error logs, and application performance metrics.</li>
                    </ul>
                    <p>All technical data is collected anonymously and cannot be used to identify you personally.</p>
                </div>

                <!-- Data Usage -->
                <div class="privacy-section" id="data-usage">
                    <h2><i class="bi bi-gear me-2"></i>How We Use Your Data</h2>
                    <p>
                        We use technical data exclusively for the following legitimate purposes:
                    </p>
                    <ul>
                        <li><strong>Service Improvement</strong> - To understand how visitors use our site and to optimize the user experience.</li>
                        <li><strong>Performance Monitoring</strong> - To track application performance, identify errors, and maintain system reliability.</li>
                        <li><strong>Aggregate Analytics</strong> - To generate anonymous statistics about visitor behavior and website usage trends.</li>
                        <li><strong>Security and Troubleshooting</strong> - To diagnose technical issues and protect our infrastructure.</li>
                    </ul>
                    <p>
                        Since we collect only technical data and no personal identifiers, your privacy is fully protected. 
                        No personal or behavioral profiles are created about you.
                    </p>
                </div>

                <!-- Data Storage -->
                <div class="privacy-section" id="data-storage">
                    <h2><i class="bi bi-server me-2"></i>Data Storage and Security</h2>
                    <p>
                        We have put in place appropriate security measures to prevent your personal data from being accidentally lost, 
                        used or accessed in an unauthorized way, altered or disclosed. In addition, we limit access to your personal data 
                        to those employees, agents, contractors and other third parties who have a business need to know.
                    </p>
                </div>

                <!-- Data Retention -->
                <div class="privacy-section" id="data-retention">
                    <h2><i class="bi bi-clock-history me-2"></i>Data Retention</h2>
                    <p>
                        We retain technical data only for as long as necessary to fulfill our operational purposes:
                    </p>
                    <ul>
                        <li><strong>Server Logs</strong> - Typically retained for 30-90 days for security and troubleshooting purposes.</li>
                        <li><strong>Analytics Data</strong> - Aggregated statistics are retained for performance analysis and trend tracking.</li>
                        <li><strong>Session Data</strong> - Temporary session information is automatically deleted after your visit.</li>
                    </ul>
                    <p>
                        Since we do not collect personally identifiable information, there are no personal profiles to retain, 
                        and you cannot request deletion of personal data as none exists in our systems.
                    </p>
                </div>

                <!-- Your Legal Rights -->
                <div class="privacy-section" id="legal-rights">
                    <h2><i class="bi bi-award me-2"></i>Your Legal Rights</h2>
                    <p>
                        Since we do not collect personally identifiable information, traditional data protection rights 
                        (such as right to access, rectification, or erasure of personal data) do not apply in the conventional sense. 
                        However, we remain fully compliant with data protection regulations:
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <ul>
                                <li><strong>Right to Privacy</strong> - We protect your anonymity by not collecting personal identifiers.</li>
                                <li><strong>Right to Non-Discrimination</strong> - We do not profile or discriminate based on collected technical data.</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul>
                                <li><strong>Right to Opt-Out</strong> - You can disable cookies and tracking technologies in your browser.</li>
                                <li><strong>Right to Contact</strong> - If you have questions about our practices, please reach out to us.</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- GDPR Rights -->
                <div class="privacy-section" id="gdpr-rights">
                    <h2><i class="bi bi-flag me-2"></i>GDPR Compliance</h2>
                    <p>
                        We are fully compliant with the General Data Protection Regulation (GDPR). As a website that collects 
                        only technical and anonymous data:
                    </p>
                    <ul>
                        <li>We do not build or maintain profiles of individual users.</li>
                        <li>We do not sell or share personal data (as we collect none).</li>
                        <li>We do not use data for behavioral advertising or targeting.</li>
                        <li>We provide transparent information about what technical data we collect and why.</li>
                    </ul>
                    <p>
                        If you are a resident of the European Economic Area (EEA) and have concerns about our data practices, 
                        you may contact us using the information provided at the bottom of this policy.
                    </p>
                </div>

                <!-- CCPA Rights -->
                <div class="privacy-section" id="ccpa-rights">
                    <h2><i class="bi bi-flag-fill me-2"></i>California Consumer Privacy Act (CCPA) Compliance</h2>
                    <p>
                        We comply with the California Consumer Privacy Act (CCPA). As we do not collect personal information:
                    </p>
                    <ul>
                        <li>We do not collect personal information as defined by CCPA (name, address, email, phone, etc.).</li>
                        <li>We do not "sell" consumer personal information.</li>
                        <li>We do not build or share consumer profiles for commercial purposes.</li>
                        <li>We collect only technical and usage data for service improvement and analytics.</li>
                    </ul>
                    <p>
                        If you are a California resident and have questions about our data practices, 
                        please feel free to contact us using the information provided below.
                    </p>
                </div>

                <!-- Cookies -->
                <div class="privacy-section" id="cookies">
                    <h2><i class="bi bi-cookie me-2"></i>Cookies and Tracking Technologies</h2>
                    <p>
                        We use cookies and similar tracking technologies only for essential functionality and analytics purposes:
                    </p>
                    <ul>
                        <li><strong>Essential Cookies</strong> - Required for basic website functionality (e.g., session management).</li>
                        <li><strong>Analytics Cookies</strong> - Help us understand how visitors interact with our site to improve performance.</li>
                        <li><strong>No Marketing Cookies</strong> - We do not use tracking cookies for behavioral advertising or marketing purposes.</li>
                    </ul>
                    <p>
                        All cookies are treated anonymously and do not identify individual users. 
                        You can control cookie preferences through your browser settings at any time.
                    </p>
                </div>

                <!-- Changes to Policy -->
                <div class="privacy-section" id="changes">
                    <h2><i class="bi bi-pencil me-2"></i>Changes to This Privacy Policy</h2>
                    <p>
                        We may update our Privacy Policy from time to time. We will notify you of any changes by posting the new Privacy Policy on this page.
                        We will let you know via email and/or a prominent notice on our service, prior to the change becoming effective and update 
                        the "Last Updated" date at the top of this Privacy Policy.
                    </p>
                </div>

                <!-- Contact Us -->
                <div class="privacy-section" id="contact">
                    <h2><i class="bi bi-envelope me-2"></i>Contact Us</h2>
                    <p>
                        If you have any questions about this Privacy Policy, please contact us:
                    </p>
                    <div class="privacy-contact-box">
                        <ul>
                            <li>
                                <i class="bi bi-envelope-fill"></i>
                                <span>By email: <a href="mailto:privacy@officeversions.com">privacy@officeversions.com</a></span>
                            </li>
                            <li>
                                <i class="bi bi-chat-left-text-fill"></i>
                                <span>By visiting our <a href="/Contact">Contact Page</a></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth scrolling for anchor links
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.privacy-toc a').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 100,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
    </script>
}
