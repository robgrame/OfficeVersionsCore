@page
@model OfficeVersionsCore.Pages.Error404Model
@{
    ViewData["Title"] = "Page Not Found";
}

<div class="error-page-container">
    <div class="error-content">
        <div class="error-icon-wrapper">
            <div class="error-icon error-404">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="12"></line>
                    <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
            </div>
        </div>
        
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Oops! Page Not Found</h2>
        <p class="error-message">
            La pagina che stai cercando sembra essersi persa nel cloud. 
            Forse è stata spostata, rinominata o semplicemente non esiste più.
        </p>
        
        <div class="error-suggestions">
            <h3>Cosa puoi fare:</h3>
            <ul>
                <li><i class="bi bi-check-circle"></i> Controlla l'URL per eventuali errori di battitura</li>
                <li><i class="bi bi-arrow-left-circle"></i> Torna alla pagina precedente</li>
                <li><i class="bi bi-house-door"></i> Vai alla <a asp-page="/Index">Homepage</a></li>
                <li><i class="bi bi-windows"></i> Esplora le <a asp-page="/Windows/Index">Windows Versions</a></li>
                <li><i class="bi bi-microsoft"></i> Scopri le <a asp-page="/Office365/Index">Office 365 Versions</a></li>
            </ul>
        </div>
        
        <div class="error-actions">
            <a asp-page="/Index" class="btn btn-primary btn-lg">
                <i class="bi bi-house-door"></i> Home
            </a>
            <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Go Back
            </button>
        </div>
    </div>
</div>

<style>
    .error-page-container {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        text-align: center;
    }
    
    .error-content {
        max-width: 600px;
        animation: fadeInUp 0.6s ease-out;
    }
    
    .error-icon-wrapper {
        margin-bottom: 2rem;
    }
    
    .error-icon {
        width: 120px;
        height: 120px;
        margin: 0 auto;
        color: var(--bs-primary, #0066cc);
        animation: pulse 2s ease-in-out infinite;
    }
    
    .error-icon svg {
        width: 100%;
        height: 100%;
    }
    
    .error-code {
        font-size: 6rem;
        font-weight: 700;
        color: var(--bs-primary, #0066cc);
        margin: 0;
        line-height: 1;
        background: linear-gradient(135deg, #0066cc 0%, #00a4ef 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .error-title {
        font-size: 2rem;
        font-weight: 600;
        color: var(--bs-dark, #212529);
        margin: 1rem 0;
    }
    
    .error-message {
        font-size: 1.125rem;
        color: var(--bs-secondary, #6c757d);
        margin-bottom: 2rem;
        line-height: 1.6;
    }
    
    .error-suggestions {
        background: var(--bs-light, #f8f9fa);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        text-align: left;
    }
    
    .error-suggestions h3 {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--bs-dark, #212529);
        margin-bottom: 1rem;
    }
    
    .error-suggestions ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .error-suggestions li {
        padding: 0.5rem 0;
        color: var(--bs-dark, #212529);
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .error-suggestions li i {
        color: var(--bs-primary, #0066cc);
        font-size: 1.25rem;
    }
    
    .error-suggestions a {
        color: var(--bs-primary, #0066cc);
        text-decoration: none;
        font-weight: 500;
    }
    
    .error-suggestions a:hover {
        text-decoration: underline;
    }
    
    .error-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
    }
    
    .error-actions .btn {
        min-width: 140px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
    }
    
    @@media (max-width: 768px) {
        .error-code {
            font-size: 4rem;
        }
        
        .error-title {
            font-size: 1.5rem;
        }
        
        .error-icon {
            width: 80px;
            height: 80px;
        }
    }
</style>
