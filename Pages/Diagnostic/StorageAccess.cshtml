@page
@model OfficeVersionsCore.Pages.Diagnostic.StorageAccessModel
@{
    ViewData["Title"] = "Local Storage Access Diagnostic";
}

<div class="container">
    <h1>Local Storage Access Diagnostic</h1>
    <p>This page tests access to local file system storage.</p>
    
    <div class="card mb-4">
        <div class="card-header">
            <h2>Storage Paths</h2>
        </div>
        <div class="card-body">
            <p><strong>Base Storage Path:</strong> @Model.StoragePath</p>
            <p><strong>Office 365 Storage Path:</strong> @Model.StoragePath@Model.OfficeVersionsPath</p>
            <p><strong>Windows Storage Path:</strong> @Model.StoragePath@Model.WindowsVersionsPath</p>
        </div>
    </div>
    
    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Error</h4>
            <p>@Model.ErrorMessage</p>
        </div>
    }
    
    <div class="card">
        <div class="card-header">
            <h2>Files in Storage</h2>
        </div>
        <div class="card-body">
            @if (Model.FileNames.Count > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>File Path</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var file in Model.FileNames)
                        {
                            <tr>
                                <td>@file</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning">
                    No files found in the storage directories. The scrapers will create files when they run.
                </div>
            }
            
            <div class="mt-3">
                <h3>Testing Local Storage</h3>
                <p>Files will be created in the local storage directories when:</p>
                <ul>
                    <li>The Office 365 Version Scraper runs (if enabled in appsettings.json with Office365Scraper:Enabled = true)</li>
                    <li>The Windows Version Scraper runs (if enabled in appsettings.json with WindowsScraper:Enabled = true)</li>
                </ul>
                <p>After the scrapers run, refresh this page to see the new files.</p>
            </div>
        </div>
    </div>
</div>